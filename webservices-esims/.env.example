# ===========================================
# eSIM Platform - Environment Variables
# ===========================================

# Server
NODE_ENV=development
PORT=9000

# Database
DATABASE_URL=mysql://eims:secret123@localhost:3307/eims

# JWT Authentication
AUTH_JWT_SECRET=your-super-secret-key-change-in-production
AUTH_JWT_EXPIRATION_INTERVAL=3600
AUTH_JWT_AUDIENCE=esim.platform
AUTH_JWT_ISSUER=esim.platform

# Password Hashing (Argon2)
AUTH_HASH_LENGTH=32
AUTH_HASH_TIME_COST=6
AUTH_HASH_MEMORY_COST=65536
AUTH_MAX_DELAY=1000

# Logging
LOG_DISABLED=false
LOG_LEVELS=["log","error","warn"]

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# Set EMAIL_ENABLED=true to enable email sending
# When disabled, emails are logged but not sent

EMAIL_ENABLED=false

# SMTP Server Settings
# For Gmail: smtp.gmail.com (port 587)
# For Outlook: smtp.office365.com (port 587)
# For Mailtrap (testing): sandbox.smtp.mailtrap.io (port 2525)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# SMTP Credentials
